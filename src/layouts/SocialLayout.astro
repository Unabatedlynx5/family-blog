---
import BaseHead from '../components/BaseHead.astro';
import { SITE_TITLE } from '../consts';

const { title = 'Family Feed' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <BaseHead title={title} description="Family Social Feed" />
    <style is:global>
        :root {
            --primary: #667eea;
            --bg: #f0f2f5;
            --white: #ffffff;
            --border: #e4e6eb;
            --text-main: #1c1e21;
            --text-secondary: #65676b;
        }
        body {
            background: var(--bg);
            color: var(--text-main);
            margin: 0;
            font-family: system-ui, -apple-system, sans-serif;
        }
        
        /* Navbar */
        .navbar {
            background: var(--white);
            padding: 0.5rem 1rem;
            box-shadow: 0 1px 2px rgba(0,0,0,0.1);
            position: sticky;
            top: 0;
            z-index: 100;
            display: flex;
            justify-content: space-between;
            align-items: center;
            height: 56px;
            box-sizing: border-box;
        }
        .logo { 
            font-weight: 800; 
            font-size: 1.5rem; 
            color: var(--primary); 
            text-decoration: none;
        }
        .nav-search {
            background: #f0f2f5;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            color: var(--text-secondary);
            display: flex;
            align-items: center;
            gap: 0.5rem;
            width: 300px;
        }
        .nav-profile {
            width: 40px;
            height: 40px;
            background: #ddd;
            border-radius: 50%;
            cursor: pointer;
        }

        /* Layout Grid */
        .social-container {
            display: grid;
            grid-template-columns: 280px 1fr 280px;
            gap: 2rem;
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 1rem;
            align-items: start;
        }

        /* Left Sidebar */
        .left-sidebar {
            position: sticky;
            top: 5.5rem;
        }
        .menu-item {
            display: flex;
            align-items: center;
            padding: 0.75rem;
            border-radius: 0.5rem;
            cursor: pointer;
            transition: background 0.2s;
            font-weight: 600;
            color: var(--text-main);
            text-decoration: none;
            margin-bottom: 0.25rem;
        }
        .menu-item:hover { background: #e4e6eb; }
        .menu-item.active { background: #e7f3ff; color: var(--primary); }
        .icon { margin-right: 1rem; font-size: 1.5rem; width: 24px; text-align: center; }

        /* Main Content Area */
        .feed-content {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            min-width: 0; /* Prevent overflow */
        }

        /* Right Sidebar */
        .right-sidebar {
            position: sticky;
            top: 5.5rem;
        }
        .widget {
            background: var(--white);
            border-radius: 0.5rem;
            padding: 1rem;
            margin-bottom: 1rem;
            box-shadow: 0 1px 2px rgba(0,0,0,0.1);
        }
        .widget h3 {
            font-size: 1rem;
            color: var(--text-secondary);
            margin-top: 0;
            margin-bottom: 1rem;
        }
        .online-list .user {
            display: flex;
            align-items: center;
            margin-bottom: 0.5rem;
            padding: 0.25rem;
            border-radius: 0.25rem;
            cursor: pointer;
        }
        .online-list .user:hover { background: #f0f2f5; }
        .status-dot {
            width: 8px;
            height: 8px;
            background: #31a24c;
            border-radius: 50%;
            margin-left: auto;
        }

        /* Responsive */
        @media (max-width: 1100px) {
            .social-container { grid-template-columns: 200px 1fr 200px; gap: 1rem; }
        }
        @media (max-width: 900px) {
            .social-container { grid-template-columns: 60px 1fr; }
            .right-sidebar { display: none; }
            .menu-item span:not(.icon) { display: none; }
            .icon { margin-right: 0; }
            .menu-item { justify-content: center; }
        }
        @media (max-width: 600px) {
            .social-container { grid-template-columns: 1fr; }
            .left-sidebar { display: none; } /* Or move to bottom nav */
        }
    </style>
</head>
<body>
