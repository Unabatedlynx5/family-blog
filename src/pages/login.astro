---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export const prerender = false;

// If already authenticated, redirect to feed
const user = Astro.locals.user;
if (user) {
  return Astro.redirect('/feed');
}
---
<html>
  <head>
    <BaseHead title="Login" description="Login to Family Blog" />
  </head>
  <body>
    <Header />
    <main class="max-w-[800px] mx-auto my-8 p-4">
      <h1 class="text-3xl mb-4">Login</h1>
      <form id="login-form" class="max-w-md">
        <label class="block mb-4">
          <span class="block mb-1 font-bold">Email</span>
          <input name="email" type="email" required class="w-full p-2 border border-input-border rounded-lg" />
        </label>
        <label class="block mb-4">
          <span class="block mb-1 font-bold">Password</span>
          <input name="password" type="password" required class="w-full p-2 border border-input-border rounded-lg" />
        </label>
        <div class="mb-4 text-right">
          <a href="/forgot-password" class="text-sm text-blue-600 hover:underline">Forgot password?</a>
        </div>
        <button type="submit" class="button">Sign in</button>
      </form>
      <div id="login-status" class="mt-4 text-red-600"></div>
    </main>
    <Footer />

    <script type="module" is:inline>
      const form = document.getElementById('login-form');
      const status = document.getElementById('login-status');
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        status.textContent = '';
        const data = new FormData(form);
        const body = { email: data.get('email'), password: data.get('password') };
        try {
          const res = await fetch('/api/auth/login', { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify(body) });
          const json = await res.json();
          if (!res.ok) {
            status.textContent = json.error || 'Login failed';
            return;
          }
          // store access token in memory (simple) and redirect to feed
          sessionStorage.setItem('accessToken', json.accessToken);
          if (json.user) {
            if (json.user.id) sessionStorage.setItem('userId', json.user.id);
            if (json.user.name) sessionStorage.setItem('userName', json.user.name);
          }
          window.location.href = '/feed';
        } catch (err) {
          status.textContent = 'Network error';
        }
      });
    </script>
  </body>
</html>
