---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export const prerender = false;

const token = Astro.url.searchParams.get('token');
if (!token) {
  return Astro.redirect('/forgot-password');
}
---
<html>
  <head>
    <BaseHead title="Reset Password" description="Set a new password" />
  </head>
  <body class="bg-none min-h-screen bg-white dark:bg-[#18191a] text-gray-900 dark:text-[#e4e6eb] antialiased transition-colors duration-300">
    <Header />
    <main class="max-w-[800px] mx-auto my-8 p-4">
      <h1 class="text-3xl mb-4">Reset Password</h1>
      <form id="reset-form" class="max-w-md">
        <input type="hidden" name="token" value={token} />
        <label class="block mb-4">
          <span class="block mb-1 font-bold">New Password</span>
          <input name="password" type="password" required minlength="8" class="w-full p-2 border border-input-border rounded-lg" />
        </label>
        <label class="block mb-4">
          <span class="block mb-1 font-bold">Confirm Password</span>
          <input name="confirm_password" type="password" required minlength="8" class="w-full p-2 border border-input-border rounded-lg" />
        </label>
        <button type="submit" class="button">Reset Password</button>
      </form>
      <div id="status" class="mt-4"></div>
    </main>
    <Footer />

    <script type="module" is:inline>
      const form = document.getElementById('reset-form');
      const status = document.getElementById('status');
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        status.textContent = 'Resetting...';
        status.className = 'mt-4 text-gray-600';
        
        const data = new FormData(form);
        const password = data.get('password');
        const confirmPassword = data.get('confirm_password');
        const token = data.get('token');

        if (password !== confirmPassword) {
          status.textContent = 'Passwords do not match';
          status.className = 'mt-4 text-red-600';
          return;
        }

        const body = { token, password };
        try {
          const res = await fetch('/api/auth/reset-password', { 
            method: 'POST', 
            headers: { 'Content-Type': 'application/json' }, 
            body: JSON.stringify(body) 
          });
          const json = await res.json();
          if (!res.ok) {
            status.textContent = json.error || 'Failed to reset password';
            status.className = 'mt-4 text-red-600';
            return;
          }
          status.textContent = 'Password reset successfully. Redirecting to login...';
          status.className = 'mt-4 text-green-600';
          setTimeout(() => {
            window.location.href = '/login';
          }, 2000);
        } catch (err) {
          status.textContent = 'Network error';
          status.className = 'mt-4 text-red-600';
        }
      });
    </script>
  </body>
</html>
